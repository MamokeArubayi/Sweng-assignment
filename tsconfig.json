{
    "compilerOption":{
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "resolveJsonModule": true, 
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6",
            "dom"
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}